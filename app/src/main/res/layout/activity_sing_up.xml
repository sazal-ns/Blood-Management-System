<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rtsoftbd.siddiqui.bloodmanagmentsystem.SingUpActivity"
    android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen"
    android:background="@drawable/bg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/login_bg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal">

        <TextView
            android:text="@string/singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singinTextView"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/donorName"
            android:ems="10"
            android:id="@+id/donorNameEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/userName"
            android:ems="10"
            android:id="@+id/userNameEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:hint="@string/password"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="3dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="numberDecimal"
            android:hint="@string/mobileNumber"
            android:ems="10"
            android:id="@+id/mobileEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/area"
            android:ems="10"
            android:id="@+id/areaEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/thana"
            android:ems="10"
            android:id="@+id/thanaEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>


        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/union"
            android:ems="10"
            android:id="@+id/unionEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="textPersonName"
            android:hint="@string/district"
            android:ems="10"
            android:id="@+id/districtEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:inputType="numberDecimal"
            android:hint="@string/age"
            android:ems="10"
            android:id="@+id/ageEditText"
            android:textAlignment="center"
            android:background="#6dc393"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="@dimen/sing_in_layout_width"
            android:layout_height="@dimen/sing_in_layout_height"
            android:id="@+id/groupSpinner"
            android:gravity="center_vertical"
            android:entries="@array/blood_group"
            android:background="#6dc393"
            android:layout_marginTop="5dp"
            android:textAlignment="center"/>

        <Button
            android:text="@string/singup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/singUnButtonD"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"/>
    </LinearLayout>



</RelativeLayout>
